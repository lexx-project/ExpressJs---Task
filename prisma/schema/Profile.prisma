model Profile {
    id String @id @default(uuid()) @db.Uuid
    name String
    gender String
    address String
    image String?

    //relations to user 1:1
    userId String @unique @db.Uuid
    user User @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?

    @@map("profiles")
} 